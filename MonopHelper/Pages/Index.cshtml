@page
@model IndexModel
@{
    ViewData["Title"] = "Create Game";
}

<div class="card">
    <div class="card-header text-white bg-primary">
        @ViewData["Title"]
    </div>
    <div class="card-body bg-light">
        <form method="post">
            <label asp-for="GameName"></label>
            <input class="form-control" type="text" asp-for="GameName"/>
            <span class="text-danger" asp-validation-for="GameName"></span>
            
            <br/>
            <input type="submit" class="btn btn-primary mt" value="Create Game"/>
        </form>
    </div>
</div>