@using MonopolyCL.Helpers
@model (List<MonopolyCL.Models.Cards.CardType> Types, bool Show)

@if(Model.Show){
    foreach (var type in Model.Types.OrderBy(t => t.Id))
    {
        <button class="btn btn-light typeBtn-@(type.Id) mt" style="width: 100%; word-break: break-word; word-wrap: break-word" type="button"
                data-bs-toggle="modal" data-bs-target="#uploadCards" onclick="SetUploadType('@(type.Id)', '@(type.Name)')">
            Upload @type.Name Cards
        </button>

        var fontCol = ColourHelper.FontColour(type.Colour);
        var hovCol = ColourHelper.HoverColour(type.Colour);

        <style>
            .typeBtn-@(type.Id){
                background: @(type.Colour);
                color: @(fontCol);
                width: 100%;
                height: 60px;
                overflow-wrap: break-word;
            }

            .typeBtn-@(type.Id):hover{
                background: @(hovCol);
                color: @(fontCol);
            }
        </style>
    }
    
    <div class="h-line mt-3"></div>
                                
    <button class="btn btn-danger text-white mt mb" style="width: 100%; word-break: break-word; word-wrap: break-word"
            onclick="MoveCards(false)">
        Move All Cards
    </button>
}

